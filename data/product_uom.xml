<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Defines UOM for rented product :
                - Hour
                - Day
                - Month
                - Year
            A product that can be rented MUST use these UOM.
        -->
        <record id="rent_uom_category" model="product.uom.categ">
            <field name="name">Duration</field>
        </record>
        <record id="rent_duration_hour" model="product.uom">
            <field name="name">Hour</field>
            <field name="category_id" ref="rent_uom_category"/>
            <field name="uom_type">smaller</field>
            <field name="factor" eval="24.0"/>
            <field name="rounding" eval="0.01"/>
        </record>
        <record id="rent_duration_day" model="product.uom">
            <field name="name">Day</field>
            <field name="category_id" ref="rent_uom_category"/>
            <field name="uom_type">reference</field>
            <field name="factor" eval="1.0"/>
            <field name="rounding" eval="0.01"/>
        </record>
        <record id="rent_duration_month" model="product.uom">
            <field name="name">Month</field>
            <field name="category_id" ref="rent_uom_category"/>
            <field name="uom_type">bigger</field>
            <field name="factor" eval="0.033"/><!-- FIXME: 30 days based month -->
            <field name="rounding" eval="0.01"/>
        </record>
        <record id="rent_duration_year" model="product.uom">
            <field name="name">Year</field>
            <field name="category_id" ref="rent_uom_category"/>
            <field name="uom_type">bigger</field>
            <field name="factor" eval="0.002739726"/>
            <field name="rounding" eval="0.01"/>
        </record>
    </data>
</openerp>
