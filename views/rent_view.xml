<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Rent form view (credit/edit)
        -->
        <record id="rent_form_view" model="ir.ui.view">
            <field name="name">rent.form.view</field>
            <field name="model">rent.rent</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <separator string="Duration" colspan="2"/>
                    <separator string="Client" colspan="2"/>
                    <group colspan="2" col="2">
                        <field name="begin_date" on_change="on_date_changed(begin_date, end_date)" />
                        <field name="end_date" on_change="on_date_changed(begin_date, end_date)" />
                        <field name="duration" />
                    </group>
                    <field name="partner_id" colspan="2"/>
                    <field name="products_ids" colspan="4" nolabel="1"/>
                </form>
            </field>
        </record>

        <!--
            Rent list view
        -->
        <record id="rent_list_view" model="ir.ui.view">
            <field name="name">rent.list.view</field>
            <field name="model">rent.rent</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="duration"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
