<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Rent form view
        -->
        <record id="rent_form_view" model="ir.ui.view">
            <field name="name">rent.form.view</field>
            <field name="model">rent.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <separator string="Rent order" colspan="4"/>
                    <field name="date" colspan="2"/>
                    <field name="partner_id" colspan="2"/>
                    <field name="ref" colspan="4"/>
                    <field name="line_ids" colspan="4" nolabel="1" editable="top"/>
                    <field name="state"/>
                </form>
            </field>
        </record>

        <!--
            Rent list view
        -->
        <record id="rent_list_view" model="ir.ui.view">
            <field name="name">rent.list.view</field>
            <field name="model">rent.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ref"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                </tree>
            </field>
        </record>

        <!--
            Rent order line list view
        -->
        <record id="rent_order_line_list_view" model="ir.ui.view">
            <field name="name">rent.list.view</field>
            <field name="model">rent.order.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="duration_value"/>
                    <field name="duration_unity"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
