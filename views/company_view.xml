<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
            Simple add a field to configure the company rent unity.
        -->
        <record id="rent_company_form_view" model="ir.ui.view">
            <field name="name">rent.company.form.view</field>
            <field name="model">res.company</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <notebook>
                    <page string="Configuration" position="inside">
                        <separator string="Rent" colspan="4"/>
                        <field name="rent_unity" colspan ="4"/>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</openerp>
