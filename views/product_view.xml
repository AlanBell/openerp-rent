<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--
        The products form view is redefined:
            - Added a 'Rent' notebook's page
            - Added a 'Can be rented' checkbox in the Characteristics
            - Added a list of renters in the rent page 
        -->
        <record id="rent_product_normal_form_view" model="ir.ui.view">
            <field name="name">rent.product.normal.form</field>
            <field name="model">product.product</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <field name="purchase_ok" position="after">
                    <field name="can_be_rent"/>
                </field>
                <page string="Packaging" position="after">
                    <page string="Rent">
                        <field name="can_be_rent"/>
                    </page>
                </page>
            </field>
        </record>
    </data>
</openerp>
